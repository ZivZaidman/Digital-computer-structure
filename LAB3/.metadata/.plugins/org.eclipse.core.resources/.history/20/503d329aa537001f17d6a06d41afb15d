void main(void){

  state = state0;  // start in idle state on RESET
  lpm_mode = mode0;     // start in idle state on RESET
  sysConfig();
  lcd_init();
  lcd_clear();

/*  int j=0;
  for (int j = 0; j < 74; j++) {
      strMerge[j] = 0x20;
  }*/

  while(1){
    switch(state){
      case state0: //idle
          enterLPM(mode0);
          break;

      case state1:
          state1Func();
          break;

      case state2:
          state2Func();
          break;

      case state3://ADC converter
          DMA1config();
          state3Func();
          break;

      case state4:
           state4Func();
      	break;
    }
  }
}

